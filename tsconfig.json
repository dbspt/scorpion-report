{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "removeComments": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./",
    "rootDir": "./",
    "typeRoots": ["../node_modules/@types"],
    "types": ["node"]
  },
  "exclude": ["./node_modules/"]
}
